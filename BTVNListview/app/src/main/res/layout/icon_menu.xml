<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgMonAn"
        android:layout_width="1200dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgMonAn"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rbStar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="#FFC107"
        android:layout_below="@+id/tvMonAn"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgMonAn"
        android:numStars="5"/>

    <TextView
        android:id="@+id/tvSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMonAn"
        android:layout_toRightOf="@+id/rbStar" />

    <TextView
        android:id="@+id/tvInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbStar"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgMonAn" />

    <TextView
        android:id="@+id/tvShip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfor"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imgMonAn"
        android:drawableLeft="@drawable/bike"
        android:drawableRight="@drawable/line" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfor"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/tvShip"
        android:drawableLeft="@drawable/clock" />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/coins"
        android:textSize="16dp"
        android:layout_below="@+id/tvTime"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgMonAn" />

</RelativeLayout>
