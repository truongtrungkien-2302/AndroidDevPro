<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgMonAn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tvMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgMonAn"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rbStar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMonAn"
        android:numStars="5"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgMonAn" />

    <TextView
        android:id="@+id/tvSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMonAn"
        android:layout_toRightOf="@+id/rbStar"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tvInfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbStar"
        android:layout_toRightOf="@+id/imgMonAn"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tvShip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfor"
        android:layout_toRightOf="@+id/imgMonAn"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInfor"
        android:layout_toRightOf="@+id/tvShip"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTime"
        android:layout_toRightOf="@+id/imgMonAn" />

</RelativeLayout>
